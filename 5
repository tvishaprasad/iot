import RPi.GPIO as gp
import time
gp.setwarnings(False)
gp.cleanup()
gp.setmode(gp.BCM)
pin1=21
pin2=20
gp.setup(pin1,gp.OUT)
gp.setup(pin2,gp.OUT)
try:
     while True:
        gp.output(pin1,True)
        time.sleep(6)
        gp.output(pin1,False)
        time.sleep(6)
        gp.output(pin2,False)
        time.sleep(6)
        gp.output(pin2,True)
        time.sleep(6)
            
except KeyboardInterrupt:
    gp.cleanup()
exit()





import RPi.GPIO as gp
import time
gp.setwarnings(False)
gp.cleanup()
gp.setmode(gp.BCM)
pin1=21
gp.setup(pin1,gp.OUT)
try:
     while True:
        gp.output(pin1,True)
        time.sleep(6)
        gp.output(pin1,False)
        time.sleep(6)
        
except KeyboardInterrupt:
    gp.cleanup()
exit()





import RPi.GPIO as GPIO
import time
GPIO.setwarnings(False)
GPIO.cleanup()
GPIO.setmode(GPIO.BCM)
pin1=18
pin2 = 24
GPIO.setup(pin1,GPIO.OUT)
GPIO.setup(pin2,GPIO.IN)
try:
    while True:
           if(GPIO.input(pin2)==1):
              GPIO.output(pin1,False)
              print("Soil is moist!")
           else:
             GPIO.output(pin1,True)
             print("Soil is dry!, WATERING")

except KeyboardInterrupt:
    GPIO.cleanup()
exit()
